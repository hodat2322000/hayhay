<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random</title>
</head>
<body>
    <p>Input</p> <input type="text" id="textInput" placeholder="Nhập giá trị..."> <button id="myButton">Click</button>
    <p class="tb"></p>
    <script>
        document.getElementById('myButton').addEventListener('click', function() {
            const inputValue = document.getElementById('textInput').value;
            fetch('/handleClick', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ message: inputValue })
            })
            .then(response => response.json())
            .then(response => {
                console.log(response); // Log phản hồi từ máy chủ Node.js
               document.getElementsByClassName('tb').innerHTML = response.addd
                
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    </script>
</body>
</html>